<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/clean_profile_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/singInButton"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/sing_in_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:icon="@drawable/icon_profile"
        app:iconPadding="10dp"
        app:iconTint="@color/white"
        app:strokeColor="@color/orange_color"
        android:backgroundTint="@color/orange_color"
        app:strokeWidth="2dp" />

</LinearLayout>